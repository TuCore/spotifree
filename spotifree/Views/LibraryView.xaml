<UserControl x:Class="Spotifree.Views.LibraryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="clr-namespace:Spotifree.Views"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d">
    <Grid Background="{DynamicResource MaterialDesignPaper}">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- SỬA LỖI: Dùng 'TextFieldAssist.LeadingIconKind' thay vì lồng PackIcon -->
        <TextBox
            Grid.Row="0"
            Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
            materialDesign:HintAssist.Hint="Tìm theo tên bài hát, nghệ sĩ, album..."
            materialDesign:TextFieldAssist.HasClearButton="True"
            Margin="10,10,10,5"
            Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto"
                      Visibility="{Binding IsSearching, Converter={StaticResource InvertBooleanConverter}}">
            <ItemsControl ItemsSource="{Binding Albums}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <views:AlbumView Margin="10" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- ListView cho kết quả tìm kiếm -->
        <ListView Grid.Row="1"
                  ItemsSource="{Binding SearchResults}"
                  SelectedItem="{Binding SelectedSearchTrack, Mode=OneWayToSource}"
                  Visibility="{Binding IsSearching, Converter={StaticResource BoolToVisConverter}}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Bài hát" DisplayMemberBinding="{Binding Title}" Width="300" />
                    <GridViewColumn Header="Nghệ sĩ" DisplayMemberBinding="{Binding Artist}" Width="250" />
                    <GridViewColumn Header="Album" DisplayMemberBinding="{Binding Album}" Width="250" />
                    <!-- Sửa lại StringFormat cho Duration -->
                    <GridViewColumn Header="Thời lượng" DisplayMemberBinding="{Binding Duration, StringFormat={}{0:F0}s}" Width="100" />
                </GridView>
            </ListView.View>
        </ListView>

        <!-- StackPanel "Chưa có nhạc" -->
        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel.Style>
                <Style TargetType="StackPanel">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <!-- Chỉ hiện khi KHÔNG có album VÀ KHÔNG đang tìm kiếm -->
                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding HasAlbums}" Value="False" />
                                <Condition Binding="{Binding IsSearching}" Value="False" />
                            </MultiDataTrigger.Conditions>
                            <Setter Property="Visibility" Value="Visible"/>
                        </MultiDataTrigger>
                    </Style.Triggers>
                </Style>
            </StackPanel.Style>

            <materialDesign:PackIcon Kind="MusicNoteOff" 
                                     Width="100" Height="100" 
                                     HorizontalAlignment="Center"
                                     Foreground="{DynamicResource MaterialDesignBodyLight}" 
                                     Margin="0,0,0,20"/>

            <TextBlock Text="Chưa có nhạc bro ơi!" 
                       Style="{StaticResource MaterialDesignHeadline5TextBlock}" 
                       HorizontalAlignment="Center"
                       FontWeight="Bold"
                       Foreground="{DynamicResource MaterialDesignBody}"/>

            <TextBlock Text="Vào Settings để scan thư mục nhạc nhé." 
                       Style="{StaticResource MaterialDesignBody1TextBlock}" 
                       HorizontalAlignment="Center"
                       Margin="0,10,0,20"
                       Foreground="Gray"/>

            <Button Content="Đi tới Settings ngay"
                    Height="50"
                    Command="{Binding GoToSettingsCommand}"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    HorizontalAlignment="Center"
                    Padding="20,10"/>
        </StackPanel>
    </Grid>
</UserControl>