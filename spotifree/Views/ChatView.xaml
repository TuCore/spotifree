<UserControl x:Class="Spotifree.Views.ChatView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:m="clr-namespace:Spotifree.Models"
             xmlns:vm="clr-namespace:Spotifree.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance vm:ChatViewModel, IsDesignTimeCreatable=False}"
             d:DesignHeight="450" d:DesignWidth="300">

    <Grid Background="{DynamicResource MaterialDesignCardBackground}">
        <Button Style="{StaticResource MaterialDesignIconButton}"
                Command="{Binding HideCommand}"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Panel.ZIndex="99"
                Margin="0,5,5,0"
                Foreground="{DynamicResource MaterialDesignBodyLight}">
            <materialDesign:PackIcon Kind="Close" />
        </Button>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" Margin="5,35,5,5">
                <ItemsControl ItemsSource="{Binding Messages}">

                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="{x:Type m:ChatMessage}">

                            <Border HorizontalAlignment="{Binding Role, Converter={StaticResource HorizontalAlignmentConverter}}"
                                Background="{Binding Role, Converter={StaticResource BubbleColorConverter}}"
                                        CornerRadius="15"
                                        Margin="5"
                                        MaxWidth="300"
                                        Padding="10">
                                <TextBlock Text="{Binding Text}"
                   TextWrapping="Wrap"
                   Foreground="{DynamicResource MaterialDesignShadowBrush}" />
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="5">
                <TextBox Text="{Binding CurrentMessage, UpdateSourceTrigger=PropertyChanged}"

                         Foreground="{DynamicResource MaterialDesignBody}"
                         Background="{DynamicResource MaterialDesignDarkSeparatorBackground}"

                         BorderThickness="0"
                         VerticalAlignment="Center"
                         MinWidth="200"
                         Margin="0,0,5,0"
                         AcceptsReturn="False">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Enter" Command="{Binding SendCommand}" />
                    </TextBox.InputBindings>
                </TextBox>
                <Button Content="Gửi" Command="{Binding SendCommand}" IsDefault="True" />
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>