<UserControl x:Class="Spotifree.Views.MiniPlayerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Spotifree.Views"
             xmlns:converters="clr-namespace:Spotifree.Converters"
             mc:Ignorable="d" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid Background="#CC1c1c1c" Height="70">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Bottom" 
                        Opacity="0.5" 
                        Margin="0,0,0,5"
                        Grid.ColumnSpan="3">
                <StackPanel.Resources>
                    <Style TargetType="Rectangle">
                        <Setter Property="Width" Value="4"/>
                        <Setter Property="Margin" Value="3,0"/>
                        <Setter Property="Fill" Value="#FF5722"/>
                        <Setter Property="RadiusX" Value="2"/>
                        <Setter Property="RadiusY" Value="2"/>
                        <Setter Property="RenderTransformOrigin" Value="0.5, 1"/>
                    </Style>
                </StackPanel.Resources>

                <Rectangle Height="20">
                    <Rectangle.RenderTransform>
                        <ScaleTransform ScaleY="{Binding AudioLevel, Mode=OneWay}"/>
                    </Rectangle.RenderTransform>
                </Rectangle>

                <Rectangle Height="35">
                    <Rectangle.RenderTransform>
                        <ScaleTransform ScaleY="{Binding AudioLevel, Mode=OneWay}"/>
                    </Rectangle.RenderTransform>
                </Rectangle>

                <Rectangle Height="50">
                    <Rectangle.RenderTransform>
                        <ScaleTransform ScaleY="{Binding AudioLevel, Mode=OneWay}"/>
                    </Rectangle.RenderTransform>
                </Rectangle>

                <Rectangle Height="30">
                    <Rectangle.RenderTransform>
                        <ScaleTransform ScaleY="{Binding AudioLevel, Mode=OneWay}"/>
                    </Rectangle.RenderTransform>
                </Rectangle>

                <Rectangle Height="15">
                    <Rectangle.RenderTransform>
                        <ScaleTransform ScaleY="{Binding AudioLevel, Mode=OneWay}"/>
                    </Rectangle.RenderTransform>
                </Rectangle>

            </StackPanel>

            <StackPanel Grid.Column="1" Margin="10,0" VerticalAlignment="Center">
                <TextBlock Text="{Binding CurrentTrack.Title, FallbackValue='Not Playing'}" 
                           Foreground="White" FontWeight="Bold" Panel.ZIndex="1"/>

                <Slider Minimum="0" 
                        Maximum="{Binding Duration, FallbackValue=100}" 
                        Value="{Binding CurrentPosition, Mode=OneWay}"
                        Panel.ZIndex="1"/>
            </StackPanel>

            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                <Button Style="{StaticResource MaterialDesignIconButton}" 
                        Command="{Binding SkipPreviousCommand}">
                    <materialDesign:PackIcon Kind="SkipPrevious" />
                </Button>

                <Button Style="{DynamicResource MaterialDesignFloatingActionButton}" 
                        Command="{Binding PlayPauseCommand}" Width="35" Height="35" Margin="5">
                    <materialDesign:PackIcon Kind="{Binding IsPlaying, Converter={StaticResource PlayPauseIconKindConverter}}"/>
                </Button>

                <Button Style="{StaticResource MaterialDesignIconButton}" 
                        Command="{Binding SkipNextCommand}">
                    <materialDesign:PackIcon Kind="SkipNext" />
                </Button>

                <Slider Width="80" Minimum="0" Maximum="1" 
                        Value="{Binding Volume, Mode=TwoWay}" Margin="5,0"/>

                <Button Style="{StaticResource MaterialDesignIconButton}"
                        Command="{Binding SwitchToMainModeCommand}">
                    <materialDesign:PackIcon Kind="ArrowExpand"/>
                </Button>
            </StackPanel>

        </Grid>
    </Grid>
</UserControl>